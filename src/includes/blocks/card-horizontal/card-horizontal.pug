mixin cardHorizontal(item, modifier)
    a(href="#" class=`card-horizontal--${modifier}`).card-horizontal
        p._img
            img(src=`i/${item.img}`)
        ._body
            p._title.card-horizontal__wrap=item.title
            p._price.card-horizontal__wrap
                | #{item.price}
                if(item.price != 'Бесплатно')
                    span.ruble &nbsp;₽
            p._tag.card-horizontal__wrap=item.tag
