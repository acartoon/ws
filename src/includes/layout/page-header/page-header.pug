mixin pageHeader(image, contentClassModifier)
    header.page-header(class=`page-header--${contentClassModifier}` style=`background-image: url(/i/header/${image}.png)`)
        ._in
            ._preheader.d-xs-none.d-m-block
                ._contacts
                    +contactsPreheader()
                ._callback
                    +buttonWhite(btnText.callback)
                p._separatop.d-none.d-md-block
            ._logo
                +logo()
            ._main-nav
                +mainNav()
        ._body
            block
