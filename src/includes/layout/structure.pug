mixin structure(pageTitle, contentClassModifier, headerImage)
    doctype html
    html
        +head(pageTitle)
        body
            +pageHeader(headerImage, contentClassModifier)
            main(class=`${contentClassModifier}-page page`)
                .container
                    block
            +footer()
            script(src="js/libs/jquery-3.5.1.min.js", type="text/javascript")
            script(src="js/libs/jquery.inputmask.js", type="text/javascript")
            script(src="js/libs/jquery.magnific-popup.min.js", type="text/javascript")
            script(src="js/script.js", type="text/javascript")
