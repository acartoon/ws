        },
    ]

mixin partnersPage
    section.partners-page__section
        .container
            h2.page__title-wrap.section-title  Выгоды от партнерства с нами
            +partnersList('benefit', partnersBenefit)

    section.partners-page__section.bg-white
        .container
            h2.page__title-wrap.section-title Условия партнерства
            +partnersListArrow('conditions', partnersConditions)
            .partners-page__button
                +buttonBlueScrollTo(btnText.conditions, 'partners-page-form')

    section.partners-page__section
        .container
            h2.page__title-wrap.section-title Почему нас выбирают?
            +partnersList('advantages', partnersAdvantages)

    section.partners-page__section.partners-page__form#partners-page-form
        .container
            h2.page__title-wrap.page-subtitle Станьте нашим партнером
            .page__form
                +formPartners('partners')
